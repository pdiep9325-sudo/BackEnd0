<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Update A User</title>
  </head>
  <body>
    <div class="topnav">
      <a href="/">Home</a>
      <a href="#news">Create users</a>
    </div>
    <form action="/update-user" method="post">
      <fieldset>
        <legend>Update a user</legend>
        <div class="input-group d-none">
          <label for="">Id</label>
          <input type="text" name="userId" value="<%= userEdit.id %>" />
        </div>
        <div class="form">
          <div class="input-group">
            <label for="">Email</label>
            <input type="text" name="email" value="<%= userEdit.email %>" />
          </div>

          <div class="input-group">
            <label for="">Name</label>
            <input type="text" name="myname" value="<%= userEdit.name%>" />
          </div>
          <div class="input-group">
            <label for="">City</label>
            <input type="text" name="city" value="<%= userEdit.city %>" />
          </div>
          <div><button class="btn">Save</button></div>
        </div>
      </fieldset>
    </form>
  </body>
</html>
