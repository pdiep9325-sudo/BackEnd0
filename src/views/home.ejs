<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/5/w3.css" />

    <title>HomePage</title>
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="/">Home</a>
      <a href="/create">Create Users</a>
    </div>
    <div style="margin: 50px 50px" class="w3-container">
      <h2
        style="font-size: 50px; font-weight: 600; margin-bottom: 50px"
        class="title"
      >
        List Users
      </h2>
      <table class="w3-table-all">
        <thead>
          <tr class="w3-red">
            <th>ID</th>
            <th>Email</th>
            <th>Name</th>
            <th>City</th>
            <th>Action</th>
          </tr>
        </thead>
        <!-- cach 2 -->
        <% listUsers.forEach(function(user) { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td><%= user.city %></td>
          <td>
            <a href="/update/<%= user.id %>">Edit</a>
            <button>Edit</button>
            <button>Delete</button>
          </td>
        </tr>
        <% }); %>
      </table>
    </div>
  </body>
</html>
